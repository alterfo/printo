.tsd-text-tabcontent
    .tsd-text.tsd-grid
        .tsd-col-1-4
            div.tsc-text__textarea-label Добавить текст:
        .tsd-col-3-4
            textarea.tsd-text__textarea(ng-model="vm.itemParams.frontText.string")
    .tsd-format.tsd-grid
        .tsd-col-1-3
            span Выбрать шрифт:
            select(ng-model="vm.itemParams.frontText.fontFamily")
                option(ng-repeat="font in vm.fonts")
                    | {{font.name}}

        .tsd-col-1-3
        .tsd-col-1-3

    include side-chooser.jade
